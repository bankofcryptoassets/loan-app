{
  "name": "loan-app",
  "type": "module",
  "version": "1.0.0",
  "description": "A Fastify-based loan application server with TypeScript",
  "main": "build/server.js",
  "scripts": {
    "build": "esbuild `find src \\( -name '*.ts' \\)` --platform=node --outdir=build --resolve-extensions=.js",
    "start": "node ./build/server.js",
    "dev": "tsx watch ./src/server.ts"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
